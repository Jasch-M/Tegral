// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator prismakt {
  // provider = "node prisma/launch-prismakt-generator.js"
  provider      = "gradle --console=plain -q runGeneratorInternal"
  output        = "../build/prismaGeneratedSrc"
  exposedTarget = "sql" // or dao
}

datasource db {
  provider = "postgresql"
  url      = "some_fake_url"
}

model User {
  identifier Int     @id @default(autoincrement())
  email      String  @unique
  name       String?
}

model AllTypesInOne {
  id Int @id @default(autoincrement())

  // Core types
  string    String
  stringOpt String?

  varchar    String @db.VarChar(20)
  varcharOpt String @db.VarChar(20)

  boolean    Boolean
  booleanOpt Boolean?

  int    Int
  intOpt Int?

  bigInt    BigInt
  bigIntOpt BigInt?

  float    Float
  floatOpt Float?

  decimal    Decimal
  decimalOpt Decimal?

  bytes    Bytes
  bytesOpt Bytes?

  // Date and time related things
  dateTime    DateTime
  dateTimeOpt DateTime?

  timestamp    DateTime @db.Timestamp(0)
  timestampOpt DateTime @db.Timestamp(0)

  time    DateTime @db.Time(0)
  timeOpt DateTime @db.Time(0)

  date    DateTime  @db.Date()
  dateOpt DateTime? @db.Date
}
